<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/app_status_bar_color</item>
    </style>

    <declare-styleable name="DailyWeatherView">
        <attr name="day_text" format="string"/>
        <attr name="weather_icon" format="reference|integer"/>
        <attr name="weather_text" format="string"/>
        <attr name="weather_range" format="string"/>
    </declare-styleable>

</resources>
